<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false" colors="true" bootstrap="./Bootstrap.php">
    <testsuites>
        <testsuite name="Gerrie Test Suite">
            <directory suffix="Test.php">./tests/Gerrie/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src/Gerrie/</directory>
        </whitelist>
    </filter>
</phpunit>